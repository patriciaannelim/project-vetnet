<div class="content">
    <div class="container">
        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb30 text-center">
                <h2>Booking Form</h2>
            </div>
        </div>
        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb30">
                <div class="tour-booking-form">
                    <form>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <h4 class="tour-form-title">Pet Details</h4>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                <div class="form-group">

                                    <div class="form-group">
                                        <label class="control-label" for="name">Name of Pet</label>
                                        <input id="petname" type="text" placeholder="Pet's Name" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="datepicker">Date of Appointment</label>
                                    <div class="input-group">
                                        <input id="datepicker" name="datepicker" type="text" placeholder="Date" class="form-control" required>
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>

                            @*<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                    <div class="form-group">
                                        <label asp-for="type" class="control-label"></label>
                                        <select asp-for="type" class="form-control" asp-items="Html.GetEnumSelectList<paymentmode>()"></select>
                                        <span asp-validation-for="type" class="text-danger"></span>
                                    </div>
                                </div>*@

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt30">
                                <h4 class="tour-form-title">Owners Detail</h4>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="name">Name</label>
                                    <input id="name" type="text" placeholder="Surname, First Name" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="email"> Email</label>
                                    <input id="email" type="text" placeholder=" " class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="phone"> Phone</label>
                                    <input id="phone" type="text" placeholder="(222) 222-2222" class="form-control" required>
                                </div>
                            </div>

                            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="city">Address</label>
                                    <input id="city" type="text" placeholder="  " class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label" for="textarea">Other Concerns</label>
                                    <textarea class="form-control" id="textarea" name="textarea" rows="4" placeholder="Write Your Concerns here"></textarea>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <button type="submit" class="btn btn-primary">Send Reservation</button>

                                <br />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
<div style="line-height:1500%;">
    <br>
</div>